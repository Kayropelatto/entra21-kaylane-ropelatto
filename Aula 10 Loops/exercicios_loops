    }

9) 
    let soma = 0
    let valor = 0

    for (let i = 0; i < 5; i++) {
        valor = Number(prompt("Digite um número"))
        if (valor < 0) {
            soma += 1
        }
    }
    console.log(soma)

10)
    let numeros = 0
    let pares = 0
    let impares = 0
    for (let i = 0; i < 10; i++) {
        numeros = Number(prompt("Digite um número"))
        if (numeros % 2 === 0) {
            pares += 1
        } else {
            impares += 1
        }
    }
    console.log(`Pares: ${pares}\nÍmpares: ${impares}`)

11)
    let i = 0
    let contador = 0
    let fora = 0
    while (i > 0) {
        i++
        let numeros = Number(prompt("Digite um número"))
        if (numeros >= 10 && numero <= 20) {
            contador += 1
        } else {
            fora += 1
        }
    }
    console.log(`${contador} números estão no intervalo\n${fora} números estão fora do intervalo`)