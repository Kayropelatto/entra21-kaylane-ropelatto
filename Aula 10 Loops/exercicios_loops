6) 
    let soma = 0
    let media = 0
    for (let i = 0; i < 5; i++) {
        let numero = Number(prompt("Digite um número"))
        soma += numero // soma = soma + numero
        media = soma / 5
    }
    console.log(`Soma: ${soma}\nMédia: ${media.toFixed(2)}`)

7)
    let numeroN = Number(prompt("Digite um número"))
    while(numeroN > 0) {
        --numeroN
        if (numeroN % 2 === 0) {
            continue
        } else {
            console.log(numeroN)
        }
    }


        let numeroN = Number(prompt("Digite um número"))
        let resultado = 0
        let lista = " "

            for ( let i = 0; i <= numeroN; i++) {
                if (i % 2 !== 0) {
                    resultado = i
                    if ( i === numeroN || i === numeroN - 1) {
                        lista += resultado
                } else {
                    lista += resultado + ", "
                }
                }
            }
            console.log(lista)

8)
    let numero = Number(prompt("Digite um número"))
    for (let i = 1; i < 10; i++) {
        let resultado = numero * i
