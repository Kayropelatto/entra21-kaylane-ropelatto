        console.log(`Estou aparecendo pela ${contador + 1}ª vez na tela!`)
        contador++
    }

    let contador = 0
    do {
        console.log(`Estou aparecendo pela ${contador + 1}ª vez na tela`)
        contador++
    } while (contador < 11)
    
