6)
    let a = []
    let soma = 0
    for (let i = 0; i < 6; i++) {
        a[i] = +prompt("Digite um número")
        soma = a[0] + a[1] + a[5]
        a[4] = 100
    }
    console.log(`A soma entre os números ${a[0]}, ${a[1]} e ${a[5]} é igual a ${soma}`)
    console.log(a)

7)
    let vetor = [],
        vetor2 = [],

    for (let i = 0; i < 5; i++) {
        vetor[i] = +prompt(`Digite o ${i + 1}º número`)
        vetor2[i] = vetor[i] ** 2
    }
    console.log(vetor)
    console.log(vetor2)

