15) 
    let filhos = 0
    let salarioPessoa = 0
    let maiorSalario = 0
    let contador = 0
    while (true) {
        let salario = Number(prompt("Digite o salário"))
        
        if (salario < 0) {
            break
        }

        let quantidadeFilhos = Number(prompt("Digite a quantidade de filhos"))
   
    contador++
    if ( salario > maiorSalario) {
        maiorSalario = salario
    }
    salarioPessoa += salario
    filhos += quantidadeFilhos
    }
    console.log(`Média salarial: ${(salarioPessoa / contador).toFixed(2)}\nMédia do número de filhos: ${(filhos / contador)}\nMaior salário: ${maiorSalario}`)

