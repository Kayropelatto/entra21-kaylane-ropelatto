    let intervalo = 0
    let foraintervalo = 0
    while (true) {
        let numero = Number(prompt("Digite um número"))
    if ( numero < 0) {
        break
    } 
    if ( numero > 10 && numero < 20) {
        intervalo++
    } else {
        foraintervalo++
    }
    }
    console.log(`${intervalo} estão no intervalor\n${foraintervalo} não estão no intervalo`)

