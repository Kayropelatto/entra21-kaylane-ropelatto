    let menorValor = 0
    let maiorValor = 0
    for (let i = 0; i < 5; i++) {
        let numero = +prompt("Digite um número")

        if ( i == 0) {
            menorValor = numero
            maiorValor = numero
        }

        if (numero > maiorValor) {
            maiorValor = numero
        }
        
        if (numero < menorValor) {
            menorValor = numero
        }
    }
    console.log(`O menor valor digitado é ${menorValor}\nO maior valor digitado é ${maiorValor}`)

    // Como sintetizar com max e min?
    		let menorValor = 0
		let maiorValor = 0
		for (let i = 0; i < 5; i++) {
			let numero = +prompt("Digite um número")
			let max = Math.max(numero);
			let min = Math.min(numero); // falta que informação?
		}
		console.log(`O menor valor digitado é ${min}\nO maior valor digitado é ${max}`)

17) 
		let jose = 0
		let maria = 0
		let joao = 0 
		let nulo = 0
		let branco = 0
		
		while (true) {
		let menu = +prompt("Digite o seu voto\n1 - José Bolinha\n2 - Maria Nascimento\n3 - João da Silva\n4 - Voto Nulo\n5 - Voto em Branco")
		
			if (menu === 0)
				break
		
		switch (menu) {
		case 1:
			jose++
		break 
		case 2:
			maria++
		break
		case 3:  
			joao++
		break
		case 4:
			nulo++
		break
		case 5: 
			branco++
		break
		default:
			console.log(Erro)
	}
}
	console.log(`Total de votos\nJosé Bolinha: ${jose} voto/s\nMaria Nascimento: ${maria} voto/s\nJoão da Silva: ${joao} voto/s\nVotos Nulos: ${nulo} voto/s\nVotos em Branco: ${branco} voto/s`)

