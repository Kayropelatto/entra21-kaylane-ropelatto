    let par = 0
    let impar = 0
    for( let i = 0; i < 10; i++) {
        let numero = Number(prompt("Digite um número")) 
        if (numero % 2 === 0) {
            par++
        } else {
            impar++
        }
    }
    console.log(`Pares: ${par}\nÍmpares: ${impar}`)

