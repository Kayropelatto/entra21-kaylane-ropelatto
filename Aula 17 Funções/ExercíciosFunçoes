        function media(a, b, c) {
            return (a + b + c) / 3
        }

        let a = +prompt("Digite uma nota")
        let b = +prompt("Digite uma nota")
        let c = +prompt("Digite uma nota")

        let resultado = media(a, b, c)
        console.log(resultado.toFixed(2))

