        function idade(dias) {
            let resultado = (anos * 365) + (meses * 30) + dias
                return (resultado)
        }
        let anos = +prompt("Digite quantos anos você tem")
        let meses = +prompt("Digite os meses")
        let dias = +prompt("Digite os dias")

        console.log(idade(dias))

